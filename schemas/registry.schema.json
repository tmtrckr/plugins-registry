{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/tmtrckr/plugins-registry/schemas/registry.schema.json",
  "title": "Time Tracker Plugin Registry Schema",
  "description": "Schema for the centralized plugin registry (registry.json)",
  "type": "object",
  "required": ["version", "last_updated", "plugins"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Registry format version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "last_updated": {
      "type": "string",
      "description": "ISO 8601 timestamp of last registry update",
      "format": "date-time"
    },
    "plugins": {
      "type": "array",
      "description": "List of available plugins",
      "items": { "$ref": "manifest.schema.json" }
    },
    "statistics": {
      "type": "object",
      "description": "Registry statistics",
      "properties": {
        "total_plugins": { "type": "integer", "minimum": 0 },
        "total_versions": { "type": "integer", "minimum": 0 },
        "total_authors": { "type": "integer", "minimum": 0 }
      }
    }
  }
}
